<div class="nsw-in-page-alert{{#if type}} nsw-in-page-alert--{{type}}{{/if}}{{#if compact}} nsw-in-page-alert--compact{{/if}}">
  {{#if icon}}<span class="material-icons nsw-material-icons nsw-in-page-alert__icon" focusable="false" aria-hidden="true">{{icon}}</span>{{/if}}
  <div class="nsw-in-page-alert__content">
    {{#if heading}}<h5>{{heading}}</h5>{{/if}}
    <p{{#if compact}} class="nsw-small"{{/if}}>{{{copy}}}</p>
  </div>
</div>
