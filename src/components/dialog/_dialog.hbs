<div class="uom-block">
  <button class="uom-button uom-button--dark js-open-dialog-{{id}}" aria-haspopup="dialog">{{#if button-title}}{{button-title}}{{else}}Launch dialog{{/if}}</button>
</div>

<div class="uom-dialog{{#unless secondary}} uom-dialog--single-action{{/unless}} js-dialog{{#if dismiss}} js-dialog-dismiss{{/if}}{{#if active}} active{{/if}}" id="{{id}}" role="dialog" aria-labelledby="{{id}}-title">
  <div class="uom-dialog__wrapper">
    <div class="uom-dialog__container">
      <div class="uom-dialog__top">
        <div class="uom-dialog__title">
          <h2 id="{{id}}-title">{{#if title}}{{title}}{{else}}Dialog{{/if}}</h2>
        </div>
        {{#if dismiss}}
        <div class="uom-dialog__close">
          <button class="uom-icon-button js-close-dialog">
            <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">close</span>
            <span class="sr-only">Close</span>
          </button>
        </div>
        {{/if}}
        </div>
      <div class="uom-dialog__content">
        {{#if content}}{{{content}}}{{else}}<p>Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. </p>{{/if}}
      </div>
    </div>
    <div class="uom-dialog__bottom">
      <button class="uom-button uom-button--dark{{#if danger}} uom-button--danger{{/if}} js-close-dialog">{{#if primary}}{{primary}}{{else}}Primary action{{/if}}</button>
      {{#if secondary}}
      <button class="uom-button uom-button--dark-outline-solid js-close-dialog">{{#if secondary}}{{secondary}}{{else}}Secondary action{{/if}}</button>
      {{/if}}
    </div>
  </div>
</div>
