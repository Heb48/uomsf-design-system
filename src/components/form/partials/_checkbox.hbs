<input class="uom-form__checkbox-input" type="checkbox" name="{{name}}" id="{{id}}"{{#if error-text}} aria-describedby="{{id}}-error-text" aria-invalid="true"{{/if}}{{#if checked}} checked{{/if}}>
<label class="uom-form__checkbox-label" for="{{id}}">{{{label}}}{{#if required}}<span class="uom-form__required"></span><span class="sr-only"> (required)</span>{{/if}}</label>{{#if error-text}}
<span id="{{id}}-error-text" class="uom-form__helper uom-form__helper--error"><span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">cancel</span>{{error-text}}</span>{{/if}}{{#if valid-text}}
<span id="{{id}}-valid-text" class="uom-form__helper uom-form__helper--valid"><span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">check_circle</span>{{valid-text}}</span>{{/if}}
