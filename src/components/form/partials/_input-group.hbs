<div class="uom-form__input-group{{#if icon}} uom-form__input-group--icon{{/if}}{{#if large}} uom-form__input-group--large{{/if}}">
  <label class="sr-only" for="{{id}}">{{label}}</label>
  <input class="uom-form__input" type="text" id="{{id}}" name="{{id}}" value="{{value}}"{{#if predictive}} aria-autocomplete="list" autocomplete="off"{{/if}}>
  <button class="uom-button {{#if white}}uom-button--white{{else}}uom-button--dark{{/if}} uom-button--flex" type="submit">{{#if icon}}<span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">{{icon}}</span><span class="sr-only">{{label}}</span>{{else}}{{label}}{{/if}}</button>
</div>
