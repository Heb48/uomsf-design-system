<fieldset class="uom-form__date">
  <legend>
    <span class="uom-form__label{{#if required}} uom-form__required{{/if}}">{{label}}{{#if required}}<span class="sr-only"> (required)</span>{{/if}}</span>{{#if helper-text}}
    <span id="{{id}}-helper-text" class="uom-form__helper">{{helper-text}}</span>{{/if}}
  </legend>
  <div class="uom-form__date-wrapper">
    <div class="uom-form__date-input">
      <label for="{{id}}-day" class="uom-form__label uom-form__label--small">Day</label>
      <input type="text" maxlength="2" id="{{id}}-day" name="{{id}}-day" autocomplete="bday-day" class="uom-form__input"{{#if error-text}} aria-invalid="true"{{/if}}>
    </div>
    <div class="uom-form__date-input">
      <label for="{{id}}-month" class="uom-form__label uom-form__label--small">Month</label>
      <input type="text" maxlength="2" id="{{id}}-month" name="{{id}}-month" autocomplete="bday-month" class="uom-form__input"{{#if error-text}} aria-invalid="true"{{/if}}>
    </div>
    <div class="uom-form__date-input uom-form__date-input--large">
      <label for="{{id}}-year" class="uom-form__label uom-form__label--small">Year</label>
      <input type="text" maxlength="4" id="{{id}}-year" name="{{id}}-year" autocomplete="bday-year" class="uom-form__input"{{#if error-text}} aria-invalid="true"{{/if}}>
    </div>
  </div>
</fieldset>
{{#if error-text}}
<span id="{{id}}-error-text" class="uom-form__helper uom-form__helper--error"><span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">cancel</span>{{error-text}}</span>
{{/if}}{{#if valid-text}}
<span id="{{id}}-valid-text" class="uom-form__helper uom-form__helper--valid"><span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">check_circle</span>{{valid-text}}</span>
{{/if}}
