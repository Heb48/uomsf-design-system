<div class="uom-list-item{{#if reversed}} uom-list-item--reversed{{/if}}{{#if block}} uom-list-item--block{{/if}}">
  <div class="uom-list-item__content">{{#if label}}
    <div class="uom-list-item__label">{{label}}</div>{{/if}}{{#if date}}
    <div class="uom-list-item__info">{{date}}</div>{{/if}}
    <div class="uom-list-item__title"><a href="#">{{heading}}</a></div>{{#if url}}
    <div class="uom-list-item__info">{{url}}</div>{{/if}}
    <div class="uom-list-item__copy">{{copy}}</div>{{#if tags}}
    <div class="uom-list-item__tags">
      <div class="uom-list uom-list--8">
        {{#each tags}}
        <span class="uom-tag">{{this}}</span>
        {{/each}}
      </div>
    </div>{{/if}}
  </div>
  {{#if img}}
  <div class="uom-list-item__image">
    <img src="{{img}}" alt="">
  </div>
  {{/if}}
</div>
