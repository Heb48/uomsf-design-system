<div class="nsw-callout">
  {{#if icon}}<svg class="nsw-icon nsw-callout__icon" focusable="false" aria-hidden="true">
    <use xlink:href="#{{icon}}"></use>
  </svg>
  {{/if}}
  <div class="nsw-callout__content">
    <h4 class="nsw-callout__title">{{heading}}</h4>
    <p>{{{copy}}}</p>
    {{#if link.text}}
      <a href="{{link.href}}" class="nsw-text-link">{{link.text}}</a>{{/if}}
    {{#if link.button }}
      <a href="{{link.href}}" class="nsw-button nsw-button--primary">{{link.button}}</a>
    {{/if}}
  </div>
</div>
