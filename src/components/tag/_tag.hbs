{{#if-equals type "link"}}
  {{#each list}}
<a href="{{url}}" class="uom-tag">{{text}}</a>
  {{/each}}
{{/if-equals}}
{{#if-equals type "text"}}
  {{#each list}}
<span class="uom-tag">{{text}}</span>
  {{/each}}
{{/if-equals}}
{{#if-equals type "checkbox"}}
  {{#each list}}
<div class="uom-tag uom-tag--checkbox">
  <input type="checkbox" id="{{id}}" name="tag-input"{{#if checked}} checked{{/if}}>
  <label for="{{id}}">{{text}}</label>
</div>
  {{/each}}
{{/if-equals}}
