<div class="uom-results-bar">
  <div class="uom-results-bar__info">{{#if empty}}Sorry, no results found for your search{{else}}Showing results 1 - 10 of 5917 results{{/if}}</div>{{#if sort}}
  <div class="uom-results-bar__sorting">
    <label class="uom-form__label" for="results-sort">Sort by:</label>
    <select class="uom-form__select" id="results-sort" name="results-sort">
      {{#each sort}}
      <option value="3">{{this}}</option>
      {{/each}}
    </select>
  </div>{{/if}}
</div>
