<div class="uom-utility-list js-utility-list{{#if align}} uom-utility-list--{{align}}{{/if}}">{{#if title}}
  <div class="uom-utility-list__title">{{title}}</div>{{/if}}
  <ul>{{#if copy}}
    <li class="uom-utility-list__item js-copy-clipboard">
      <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">link</span>
      Copy link
    </li>{{/if}}{{#if print}}
    <li class="uom-utility-list__item js-print-page">
      <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">print</span>
      <span>Print this page</span>
    </li>{{/if}}{{#if download}}
    <li class="uom-utility-list__item js-download-page"{{#if pdf}} data-pdf-content="{{pdf}}"{{/if}}>
      <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">download</span>
      <span>Download as PDF</span>
    </li>{{/if}}{{#if share}}
    <li class="uom-utility-list__item js-share" aria-controls="social-share-{{id}}" data-title="Social Sharing">
      <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">share</span>
      <span data-anchor>Share this page</span>
      <div id="social-share-{{id}}" class="uom-toggletip__element uom-toggletip__element--{{#if theme}}light{{/if}}{{#unless theme}}dark{{/unless}}">
      {{#each social}}
        <a class="uom-icon-button" data-social="{{@key}}" {{#each data}}{{@key}}="{{this}}"{{/each}}>
          {{{this.icon}}}
        </a>
      {{/each}}
      </div>
    </li>{{/if}}
  </ul>
</div>
