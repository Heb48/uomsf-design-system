<div class="uom-global-alert{{#if type}} uom-global-alert--{{type}}{{/if}} js-global-alert" role="alert" data-cookie-name="{{cookie}}">
  <div class="uom-global-alert__wrapper">
    <div class="uom-global-alert__content">
      <div class="uom-global-alert__title">{{title}}</div>
      <p>{{{content}}}{{#if link}}{{#if ctaHref}} <a href="{{ctaHref}}">{{ctaText}}</a>{{/if}}{{/if}}</p>
    </div>{{#unless link}}{{#if ctaText}}{{#if ctaHref}}
    <p><a href="{{ctaHref}}" class="uom-button{{#if-equals type "light"}} uom-button--info{{else}} uom-button--white{{/if-equals}}">{{ctaText}}</a></p>{{else}}
    <p><button type="button" class="uom-button{{#if-equals type "light"}} uom-button--info{{else}} uom-button--white{{/if-equals}}">{{ctaText}}</button></p>
    {{/if}}{{/if}}{{/unless}}
    <button class="uom-icon-button js-close-alert" type="button" aria-expanded="true">
      <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">close</span>
      <span class="sr-only">Close message</span>
    </button>
  </div>
</div>
