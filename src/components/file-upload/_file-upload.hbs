<label class="uom-form__label{{#if required}} uom-form__required{{/if}}" for="{{id}}">{{label}}{{#if required}}<span class="sr-only"> (required)</span>{{/if}}</label>{{#if helper-text}}
<span class="uom-form__helper" id="{{id}}-helper-text">{{{helper-text}}}</span>{{/if}}{{#if error-text}}
<span class="uom-form__helper uom-form__helper--error" id="{{id}}-error-text"><span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">cancel</span>{{error-text}}</span>{{/if}}{{#if valid-text}}
<span class="uom-form__helper uom-form__helper--valid" id="{{id}}-valid-text"><span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">check_circle</span>{{valid-text}}</span>{{/if}}
<div class="uom-file-upload{{#if js}} js-file-upload{{/if}}"{{#if replace}} data-replace-files{{/if}}>
    <input id="{{id}}" type="file" class="uom-file-upload__input" name="{{id}}"{{#if helper-text}} aria-describedby="{{#if helper-text}}{{id}}-helper-text{{/if}}"{{/if}}{{#if error-text}} aria-invalid="true"{{/if}}{{#if accept}} accept="image/*,.pdf"{{/if}}{{#if multiple}} multiple{{/if}}>
    <label for="{{id}}" class="uom-file-upload__label uom-button uom-button--dark-outline-solid">Select file</label>
</div>
