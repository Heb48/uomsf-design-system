{{#if single}}
<div class="uom-date-input js-date-input"{{#if disabled}} data-min-date="02/01/2024" data-max-date="28/01/2024" data-dates-disabled="18/01/2024 19/01/2024 20/01/2024"{{/if}}>
  <legend>
    <label for="date-input-{{id}}" class="uom-form__label">Select date</label>
    <span id="date-input-{{id}}-helper-text" class="uom-form__helper">Use dd/mm/yyyy format. For example 28 10 2024</span>
  </legend>

  <div class="uom-date-input__wrapper uom-form__input-group uom-form__input-group--icon">
    <input type="text" class="uom-form__input js-date-input__text" autocomplete="off" id="date-input-{{id}}"{{#if disabled}} value="12/01/2024"{{/if}}>

    <button class="uom-button uom-button--dark uom-button--flex js-date-input__trigger" type="button">
      <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">calendar_today</span>
    </button>
  </div>
</div>{{/if}}{{#if multiple}}
<fieldset class="uom-form__date uom-date-input js-date-input">
  <legend>
    <span class="uom-form__label">Start date</span>
    <span id="form-date-{{id}}-helper-text" class="uom-form__helper">For example 28 10 2024</span>
  </legend>
  <div class="uom-form__date-wrapper uom-date-input__wrapper js-date-input-multiple">
    <div class="uom-form__date-input">
      <label for="form-date-{{id}}-day" class="uom-form__label uom-form__label--small">Day</label>
      <input type="text" maxlength="2" id="form-date-{{id}}-day" name="form-date-{{id}}-day" autocomplete="bday-day" class="uom-form__input js-date-picker-date">
    </div>
    <div class="uom-form__date-input">
      <label for="form-date-{{id}}-month" class="uom-form__label uom-form__label--small">Month</label>
      <input type="text" maxlength="2" id="form-date-{{id}}-month" name="form-date-{{id}}-month" autocomplete="bday-month" class="uom-form__input js-date-picker-month">
    </div>
    <div class="uom-form__date-input uom-form__date-input--large">
      <label for="form-date-{{id}}-year" class="uom-form__label uom-form__label--small">Year</label>
      <input type="text" maxlength="4" id="form-date-{{id}}-year" name="form-date-{{id}}-year" autocomplete="bday-year" class="uom-form__input js-date-picker-year">
    </div>
    <div class="uom-date-input__button">
      <button class="uom-button uom-button--dark uom-button--flex js-date-input__trigger" type="button">
        <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">calendar_today</span>
      </button>
    </div>
  </div>
</fieldset>
{{/if}}
