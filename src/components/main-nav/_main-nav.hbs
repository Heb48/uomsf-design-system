<nav class="uom-main-nav{{#if mega-menu}} js-mega-menu{{/if}}" id="main-nav" aria-label="Main menu">
  <div class="uom-main-nav__header">
    <div class="uom-main-nav__title">Menu</div>
    <button class="uom-icon-button js-close-nav" type="button" aria-expanded="true">
      <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">close</span>
      <span class="sr-only">Close Menu</span>
    </button>
  </div>
  <ul class="uom-main-nav__list">
    {{#each items}}
    <li{{#if active}} class="active"{{/if}}>
      <a href="{{url}}">
        <span>{{text}}</span>
        {{#if sub-nav}}
        <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">keyboard_arrow_right</span>
        {{/if}}
      </a>{{#if sub-nav}}

      <div class="uom-main-nav__sub-nav" id="sub-nav-{{id}}" role="region" aria-label="{{text}} Submenu">
        <div class="uom-main-nav__header">
          <button class="uom-icon-button uom-icon-button--flex js-close-sub-nav" type="button" aria-expanded="true" aria-controls="sub-nav-{{id}}">
            <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">keyboard_arrow_left</span>
            <span>Back<span class="sr-only"> to previous menu</span></span>
          </button>

          <button class="uom-icon-button js-close-nav" type="button" aria-expanded="true">
            <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">close</span>
            <span class="sr-only">Close Menu</span>
          </button>
        </div>

        <div class="uom-main-nav__title">
          <a href="{{url}}">
            <span>{{text}}</span>
            <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">east</span>
          </a>
        </div>

        <div class="uom-main-nav__description">{{description}}</div>

        <ul class="uom-main-nav__sub-list">
          {{#each sub-nav}}
          <li>
            <a href="{{url}}">
              <span>{{text}}</span>
              {{#if sub-nav}}
              <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">keyboard_arrow_right</span>
              {{/if}}
            </a>
            {{#if sub-nav}}
            <div class="uom-main-nav__sub-nav" id="sub-nav-{{id}}" role="region" aria-label="{{text}} Submenu">
              <div class="uom-main-nav__header">
                <button class="uom-icon-button uom-icon-button--flex js-close-sub-nav" type="button" aria-expanded="true" aria-controls="sub-nav-{{id}}">
                  <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">keyboard_arrow_left</span>
                  <span>Back<span class="sr-only"> to previous menu</span></span>
                </button>

                <button class="uom-icon-button js-close-nav" type="button" aria-expanded="true">
                  <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">close</span>
                  <span class="sr-only">Close Menu</span>
                </button>
              </div>

              <div class="uom-main-nav__title">
                <a href="{{url}}"><span>{{text}}</span></a>
              </div>

              <ul class="uom-main-nav__sub-list">
                {{#each sub-nav}}
                <li>
                  <a href="{{url}}">
                    <span>{{text}}</span>
                    {{#if sub-nav}}
                    <span class="material-icons uom-material-icons" focusable="false" aria-hidden="true">keyboard_arrow_right</span>
                    {{/if}}
                  </a>
                </li>
                {{/each}}
              </ul>
            </div>
            {{/if}}
          </li>
          {{/each}}
        </ul>
      </div>
      {{/if}}
    </li>
    {{/each}}
  </ul>
</nav>
