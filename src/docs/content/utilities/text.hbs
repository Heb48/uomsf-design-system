<h3>Text color</h3>

<p>Control the text color of an element using the <code>uom-text--{color}</code> utilities.</p>

<div class="uom-section uom-section--white uom-block uom-p-sm">
  <div class="uom-table uom-table--bordered uom-table--valign-middle">
    <table>
      <tbody>
        <tr>
          <th style="width: 25%">
            <p>Class</p>
          </th>
          <th style="width: 25%">
            <p>Hover Class</p>
          </th>
          <th style="width: 50%">
            <p>Description</p>
          </th>
        </tr>
        {{#each model.textColour as |value property|}}
        <tr>
          <td>
            <p>{{@key}}</p>
          </td>
          <td>
            <p>hover:{{@key}}</p>
          </td>
          <td>
            <p>Applies {{property}} <code>var(--{{this}})</code> to element</p>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

